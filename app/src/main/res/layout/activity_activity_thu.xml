<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tvu.actionbar_tabhost.Chi_activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Them khoan thu"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:singleLine="true"
        android:layout_weight = "0"
        android:background="#ff346dff" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luu"
        android:id="@+id/button"
        android:background="#ff377aff"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/editText4"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ten:"
        android:id="@+id/textView2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="15dp"
        android:id="@+id/editText"
        android:layout_above="@+id/textView3"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="So tien"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="15dp"
        android:id="@+id/editText2"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="x 1.000d"
        android:id="@+id/textView4"
        android:layout_below ="@+id/button"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/editText"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nhom"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/editText3"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="180dp"
        android:layout_height="15dp"
        android:id="@+id/editText3"
        android:layout_alignBottom="@+id/button3"
        android:layout_toEndOf="@+id/textView3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sua"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/editText2"
        android:layout_toEndOf="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ngay"
        android:id="@+id/textView6"
        android:layout_below="@id/textView5"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="30/12/2015"
        android:id="@+id/textView7"
        android:layout_alignEnd="@+id/editText"
        android:layout_below="@id/editText3"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:id="@+id/button4"
        android:singleLine="true"
        android:layout_below="@id/button3"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/textView7"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ghi chu"
        android:id="@+id/textView8"
        android:layout_below="@id/textView6"
        android:layout_marginTop="20dp"  />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText4"
        android:layout_toRightOf="@id/textView8"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/textView6"
        android:layout_marginTop="10dp"/>
</RelativeLayout>